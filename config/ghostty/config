# Startup Command
command = ~/.config/ghostty/tmux-ghostty-startup.sh

# Window Configuration
window-decoration = none
window-padding-x = 10, 10
window-padding-y = 4, 7

# Font Configuration
# font-family = FiraCode Nerd Font
font-family = JetBrainsMono Nerd Font
# font-family = Iosevka Nerd Font
font-family = LXGW WenKai Mono TC
font-family = Noto Color Emoji
font-size = 12
font-feature = -calt, -liga, -dlig # Disable ligatures

# Theme and Colors
theme = catppuccin-macchiato
background-opacity = 0.95

# Mics
confirm-close-surface = false
mouse-scroll-multiplier = 0.25
shell-integration = zsh
shell-integration-features = cursor,sudo,title

# Keybindings
# check: ghostty +list-keybinds --default
keybind = ctrl+alt+minus=decrease_font_size:1
keybind = ctrl+alt+plus=increase_font_size:1
keybind = ctrl+alt+equal=increase_font_size:1
keybind = ctrl+alt+r=reload_config
