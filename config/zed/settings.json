// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    },
    "default_profile": "ask",
    "model_parameters": []
  },
  "context_servers": {
    "time": {
      "source": "custom",
      "enabled": true,
      "command": "uvx",
      "args": ["mcp-server-time"]
    },
    "sequentialthinking": {
      "source": "custom",
      "enabled": true,
      "command": "docker",
      "args": ["run", "--rm", "-i", "mcp/sequentialthinking"]
    },
    "memory": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"]
    },
    "fetch": {
      "source": "custom",
      "enabled": true,
      "command": "uvx",
      "args": ["mcp-server-fetch"]
    },
    "mcp-server-context7": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "context7_api_key": "ctx7sk-8dca1e4a-d873-4a5c-b910-10f3f74f1d97"
      }
    }
  },
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Catppuccin Macchiato"
  },
  // ui
  "icon_theme": "Symbols Icon Theme",
  "ui_font_size": 18,
  "buffer_font_size": 16,
  "buffer_font_family": "Iosevka Nerd Font",
  "buffer_font_fallbacks": [
    "Iosevka Nerd Font",
    "LXGW WenKai Mono TC",
    "Noto Color Emoji"
  ],
  "buffer_font_features": {
    "calt": false // no ligature
  },
  "tab_bar": {
    "show": true
  },
  "minimap": {
    "show": "always",
    "thumb": "always",
    "thumb_border": "right_open",
    "current_line_highlight": null
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "scrollbar": {
    "show": "never"
  },
  // panels location
  "project_panel": {
    "hide_gitignore": false,
    "button": true,
    "dock": "right",
    "git_status": false
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "left"
  },
  "git_panel": {
    "dock": "right"
  },
  "notification_panel": {
    "dock": "left"
  },
  // git
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "delay_ms": 2000,
      "show_commit_summary": true
    }
  },

  // vim
  "relative_line_numbers": true,
  "base_keymap": "VSCode",
  "vim_mode": true,

  // LSP
  "inlay_hints": {
    "enabled": true
  },

  // Language
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "formatter": [
        { "code_action": "source.organizeImports.ruff" },
        { "code_action": "source.fixAll.ruff" },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },

  "lsp": {
    // Rust
    "rust-analyzer": {
      "initialization_options": {
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true
          },
          "closureReturnTypeHints": {
            "enable": "always"
          }
        },
        "diagnostics": {
          "experimental": {
            "enable": true
          }
        },
        "check": {
          "enabled": true,
          "command": "clippy",
          "feature": "all"
        },
        "cargo": {
          "allTargets": false,
          "features": "all",
          "buildScripts": {
            "enabled": true
          }
        },
        "procMacro": {
          "enabled": true,
          "ignore": {}
        },
        "imports": {
          "granularity": {
            "group": "module" // Group imports by module.
          },
          "prefix": "self" // Use `self` as the import prefix.
        }
      },
      "enable_lsp_tasks": true
    },
    // Python
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "strict",
          "autoSearchPaths": true,
          "inlayHints": {
            "variableTypes": true,
            "functionReturnTypes": true
          },
          "autoImportCompletions": true,
          "useLibraryCodeForTypes": true
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 80,
          "lint": {
            "extendSelect": ["I"]
          }
        }
      }
    },

    // React
    "tailwindcss-language-server": {
      "settings": {
        "classFunctions": ["cva", "cx"],
        "experimental": {
          "classRegex": ["[cls|className]\\s\\:\\=\\s\"([^\"]*)"]
        }
      }
    }
  },

  // MISCS
  "diagnostics_max_severity": "info",
  "diagnostics": {
    "inline": {
      "enabled": true,
      "max_severity": null
    }
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    // above is default from Zed
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules"
  ],
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"]
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
